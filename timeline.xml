<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>com_timeline</name>
    <creationDate>2014-04-07</creationDate>
    <copyright>Copyright (C) 2014. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <author>Adam Bouqdib</author>
    <authorEmail>info@donjoomla.com</authorEmail>
    <authorUrl>http://donjoomla.com</authorUrl>
    <version>1.0.0</version>
    <description></description>
    
    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>timeline.php</filename>
        <filename>controller.php</filename>
        <filename>router.php</filename>
        <folder>views</folder>
        <folder>models</folder>
        <folder>controllers</folder>
        <folder>helpers</folder>
    </files>
    <languages folder="site">
        
			<language tag="en-GB">language/en-GB.com_timeline.ini</language>
    </languages>
    <administration>
        <menu img="components/com_timeline/assets/images/s_com_timeline.png" >COM_TIMELINE</menu>
        <submenu>
            
			<menu link="option=com_timeline&amp;view=timelines" view="timelines" img="components/com_timeline/assets/images/s_timelines.png" alt="Timeline/Timelines">COM_TIMELINE_TITLE_TIMELINES</menu>

			<menu link="option=com_timeline&amp;view=items" view="items" img="components/com_timeline/assets/images/s_items.png" alt="Timeline/Items">COM_TIMELINE_TITLE_ITEMS</menu>

        </submenu>
        <files folder="administrator">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>timeline.php</filename>
            <folder>controllers</folder>
            <folder>assets</folder>
            <folder>helpers</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>views</folder>
        </files>
        <languages folder="administrator">
            
			<language tag="en-GB">language/en-GB.com_timeline.ini</language>
			<language tag="en-GB">language/en-GB.com_timeline.sys.ini</language>
        </languages>
    </administration>
</extension>
